<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_background" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="180dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="-10dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/profile_pic"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome back,"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-60dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Marie Brown"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-30dp"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/baseline_settings_24"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today's date:"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="160dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/updatedate"
                    android:text="hour"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="175dp"/>

                <Button
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="235dp"
                    android:layout_marginLeft="31dp"
                    android:text="Timezone"
                    android:textSize="13dp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"/>

                <Button
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="235dp"
                    android:layout_marginLeft="150dp"
                    android:text="Search"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="320dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#C420253B"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="161dp"
                    android:layout_marginTop="-30dp"
                    android:layout_marginLeft="270dp"
                    android:alpha="0.7"
                    android:src="@drawable/portugal_icon" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/portugal"
                    android:text="00:00"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-120dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/dayPortugal"
                    android:text="Wednesday"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="440dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#C420253B"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="161dp"
                    android:layout_marginTop="-30dp"
                    android:layout_marginLeft="270dp"
                    android:alpha="0.7"
                    android:src="@drawable/us_icon"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/losAngeles"
                    android:text="00:00"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-120dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/dayUS"
                    android:text="Wednesday"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="560dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#C420253B"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="161dp"
                    android:layout_marginTop="-30dp"
                    android:layout_marginLeft="270dp"
                    android:alpha="0.7"
                    android:src="@drawable/france_icon" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/france"
                    android:text="00:00"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-120dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/dayFrance"
                    android:text="Wednesday"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="680dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#C420253B"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="161dp"
                    android:layout_marginTop="-30dp"
                    android:layout_marginLeft="270dp"
                    android:alpha="0.7"
                    android:src="@drawable/sweden_icon" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sweden"
                    android:text="00:00"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-120dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/daySweden"
                    android:text="Wednesday"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="800dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#C420253B"
                app:cardCornerRadius="30dp">

                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="161dp"
                    android:layout_marginTop="-30dp"
                    android:layout_marginLeft="270dp"
                    android:alpha="0.7"
                    android:src="@drawable/spain_icon" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spain"
                    android:text="00:00"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-120dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/daySpain"
                    android:text="Wednesday"
                    android:layout_gravity="center"
                    android:layout_marginLeft="-10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>


            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>